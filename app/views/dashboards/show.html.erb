<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">What I'm Learning</h1>
  <hr>
  <br />
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-fluid image-center hidden-xs-down hidden-sm-down hidden-md-down' %>
    <br />
    <div class="row">
      <div class="col-12 col-sm-9 text-left course-description">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-3 text-right more-info">
        <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <br class="clr" />
  <% end %>

  <h1 class="text-center">What I'm Teaching</h1>
  <hr>
  <br />
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-fluid image-center hidden-xs-down hidden-sm-down hidden-md-down' %>
    <br />
    <div class="row">
      <div class="col-12 col-sm-9 text-left course-description">
        <%= course.description %>
      </div>
      
      <div class="col-12 col-sm-3 text-right more-info">
        <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>

    <br class="clr" />

  <% end %>
</div>