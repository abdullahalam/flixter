<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta name="author" content="Abdullah Alam">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to image_tag("logo.png", alt: "Flixter Logo"), '/', class: 'navbar-brand hidden-xs-down hidden-sm-down hidden-md-down' %>
        <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item">
              <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
            </li>
          </ul>

          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
              </li>

              <li class="nav-item">
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>

        </div>
      </nav>

      <% if notice.present? %>
        <p class="alert alert-info successful"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger unsuccessful"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>Teachers</b>
            <br />
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br />
            <%= link_to 'My Dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br />
            <%= link_to 'Team', '#' %>
            <br />
            <%= link_to 'Careers', '#' %>
            <br />
            <%= link_to 'Privacy Policy', privacy_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br />
            abdullah.alam.omi@gmail.com
            <br />
            Buena Park, CA 90620
          </div>
          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br />
            <%= link_to 'https://github.com/abdullahalam' do %>
              <span class="fa fa-github-alt fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://www.facebook.com/boom.boom.omi' do %>
              <span class="fa fa-facebook-official fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://twitter.com/abdullah_a_alam' do %>
              <span class="fa fa-twitter fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://www.linkedin.com/in/abdullahaalam' do %>
              <span class="fa fa-linkedin fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://medium.com/@abdullahaalam' do %>
              <span class="fa fa-medium fa-2x social-button"></span>
            <% end %>


          </div>
        </div>
      </div>
    </div>

    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  
  </body>
</html>